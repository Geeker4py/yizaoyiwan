<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>一早一晚</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= body_class %>">
    <%= render '/shared/header' %>
    
    <div class="header">
      <div class="container">
        <div class="pull-right">
          <% if current_user_session %>
            欢迎  <%= current_user.username %>
            <%= link_to '注销', signout_path, method: :delete, data: { confirm: '确定要注销？'} %>
          <% else %>
            <%= link_to '登录', signin_path %>
            <%= link_to '注册', '#' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= render 'messages' %>

      <section class="sidebar">
        <%= render 'application/panels/new_discussion' %>

        <%= yield(:sidebar) %>
      </section>

      <section class="content">
        <%= yield %>
      </section>
    </div>
    
    <%= javascript_include_tag 'application' %>
  </body>
</html>
