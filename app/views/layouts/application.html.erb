<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>一早一晚</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= body_class %>">
    <%= render 'header' %>

    <div class="container">
      <%= render 'messages' %>

      <section class="sidebar">
        <%= render 'application/panels/new_discussion' %>

        <%= yield(:sidebar) %>
      </section>

      <section class="content">
        <%= yield %>
      </section>
    </div>
    
    <%= javascript_include_tag 'application' %>
  </body>
</html>
