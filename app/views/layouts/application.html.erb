<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Yizaoyiwan</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= page_class %>">
    <div class="header">
      <% if user_signed_in? %>
        欢迎  <%= current_user.username %>
        <%= link_to '注销', destroy_user_session_path, method: :delete, data: { confirm: '确定要注销？'} %>
      <% else %>
        <%= link_to '登录', new_user_session_path %>
        <%= link_to '注册', new_user_registration_path %>
      <% end %>
      <%= link_to '讨论', discussions_path %>
      <%= link_to '分类', categories_path %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
    
    <%= javascript_include_tag 'application' %>
  </body>
</html>
